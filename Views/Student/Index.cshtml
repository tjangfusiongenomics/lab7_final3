@model IEnumerable<SQLiteWeb.Models.Student>
@{
    ViewBag.Title = "Students";
}
<h2>@ViewBag.Title</h2>
<p>
    <a asp-controller="Student" asp-action="Create">Create New</a>
</p>
<table class="table">
    <tr>
        <th>Id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>School</th>
        <th>Start Date</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.School)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                <a asp-controller="Student" asp-action="Edit" asp-route-id= "@item.Id"> Edit </a>
            </td>
            <td>
                <a asp-controller="Student" asp-action="Delete" asp-route-id="@item.Id"> Delete </a>
            </td>
        </tr>
    }
</table>